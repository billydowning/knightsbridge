# Toyota Feature Flags
# Copy this file to .env and set values to enable/disable features

# Reconnection system - enable with caution, can break basic flow
VITE_ENABLE_RECONNECTION=false

# Game history feature - previously caused major instability  
VITE_ENABLE_GAME_HISTORY=false

# Advanced analytics and tracking
VITE_ENABLE_ANALYTICS=false

# Debug logging for development
VITE_ENABLE_DEBUG=false

# Enhanced UI features
VITE_ENABLE_ENHANCED_UI=false

# Development settings
NODE_ENV=development